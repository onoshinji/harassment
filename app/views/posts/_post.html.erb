<div class="col-sm-12 col-lg-6 mb-3 style='max-width: 500px;'">
  <div id="post-id-<%= post.id %>">
    <div class="card mb-3" style="max-width: 500px;">
      <!-- グラフとテキストを横並びにする -->
      <div class="row no-gutters">
        <!-- テキスト部分 -->
        <div class="col-lg-6">
          <div class="card-body">
            <h4 class="card-title">
              <%= post.title %>
            </h4>
            <ul class="list-inline">
              <li class="list-inline-item" id="kind_button">
                <%= "#{post.kind}"%>
              </li>
              <li class="list-inline-item">
                <%= "ハラスメント！#{post.guilty}票"%>
              </li>
              <li class="list-inline-item">
                <%= "ちがうかなあ#{post.not_guilty}票" %>
              </li>
            </ul>
          </div>
        </div>
        <!-- グラフ部分 -->
        <div class="col-lg-6">
          <% if post.guilty >= 1 or post. not_guilty >= 1%>
            <%= pie_chart [["ハラスメント",post.guilty],["ちがうかなあ",post.not_guilty]] %>
          <% else %>
            <p>まだ投票されていません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
