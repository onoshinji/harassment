<div class="col-sm-12 col-md-12 col-lg-6 mb-2">
  <div id="post-id-<%= post.id %>">
    <div class="card mb-3" style="max-width: 600px;">
      <!-- グラフとテキストを横並びにする -->
      <div class="row no-gutters">
        <!-- テキスト部分 -->
        <div class="col-lg-6">
          <div class="card-body">
            <li class="list-inline-item" id="kind_button">
              <%= "#{post.kind}"%>
            </li>
            <h4 class="card-text base-light-color">
              <%= post.title %>
            </h4>
            <ul class="list-inline">
              <li class="list-inline-item">
                <%= link_to guilty_path(post_id: post.id), class: 'btn btn-primary btn-sm', method: :get do %>
                  ハラスメント！
                <% end %>
                <%= "#{post.guilty}票"%>
              </li>
              <li class="list-inline-item">
                <%= link_to little_guilty_path(post_id: post.id), class: 'btn btn-success btn-sm', method: :get do %>
                  たぶんそう
                <% end %>
                <%= "#{post.little_guilty}票"%>
              </li>
              <li class="list-inline-item">
                <%= link_to little_not_guilty_path(post_id: post.id), class: 'btn btn-warning btn-sm', method: :get do %>
                  たぶんちがう
                <% end %>
                <%= "#{post.little_not_guilty}票"%>
              </li>
              <li class="list-inline-item">
                <%= link_to not_guilty_path(post_id: post.id), class: 'btn btn-danger btn-sm', method: :get do %>
                  ちがう
                <% end %>
                <%= "#{post.not_guilty}票"%>
              </li>
            </ul>
          </div>
        </div>
        <!-- グラフ部分 -->
        <div class="col-lg-6">
          <% unless post.guilty == 0 && post.not_guilty == 0 && post.little_guilty == 0 && post.little_not_guilty == 0 %>
            <%= pie_chart [ ["ハラスメント",post.guilty],
                            ["ちがう",post.not_guilty],
                            ["多分ちがう",post.little_not_guilty],
                            ["多分そう",post.little_guilty] ]%>
          <% else %>
            <p>まだ投票されていません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
