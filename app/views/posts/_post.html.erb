<div class="col-sm-10 col-md-10 col-lg-10 offset-1 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card mb-3" style="max-width: 1000px;">
      <!-- グラフとテキストを横並びにする -->
      <div class="row no-gutters">
        <!-- テキスト部分 -->
        <div class="col-lg-6">
          <div class="card-body">
            <li class="list-inline-item" id="kind_button">
              <%= "#{post.kind}"%>
            </li>
            <h4 class="card-title base-light-color">
              <%= post.title %>
            </h4>
            <ul class="list-inline">
              <li class="list-inline-item">
                <%= link_to guilty_path(post_id: post.id), class: 'btn btn-primary btn-sm', method: :get do %>
                  ハラスメント！
                <% end %>
                <%= "#{post.guilty}票"%>
              </li>
              <li class="list-inline-item">
                <%= link_to not_guilty_path(post_id: post.id), class: 'btn btn-danger btn-sm', method: :get do %>
                  ちがうかな
                <% end %>
                <%= "#{post.not_guilty}票"%>
              </li>
            </ul>
          </div>
        </div>
        <!-- グラフ部分 -->
        <div class="col-lg-6">
          <% if post.guilty >= 1 or post. not_guilty >= 1%>
            <%= pie_chart [["ハラスメント",post.guilty],["ちがうかなあ",post.not_guilty]] %>
          <% else %>
            <p>まだ投票されていません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
